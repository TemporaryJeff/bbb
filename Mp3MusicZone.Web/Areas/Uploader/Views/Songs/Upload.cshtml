@model SongFormModel

@{
	ViewData["Title"] = "Upload Song";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="POST" asp-action="Upload" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly"></div>

			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" value="@Model.Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Singer"></label>
				<input asp-for="Singer" value="@Model.Singer" class="form-control" />
				<span asp-validation-for="Singer" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="CategoryId"></label>
				<select asp-for="CategoryId" asp-items="Model.Categories" value="@Model.CategoryId" class="form-control"></select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>

			<div class="form-group">
				Upload song (only .mp3 files are allowed):
				<input asp-for="Song" accept=".mp3" style="display: none"/>

				<button type="button"
						class="btn btn-default"
						onclick="document.getElementsByName('Song')[0].click()">
					Choose your file!
				</button>
				<div>
					<span asp-validation-for="Song" class="text-danger"></span>
				</div>
			</div>

			<input type="submit" class="btn btn-primary" value="Upload Music" />
		</form>
	</div>
</div>