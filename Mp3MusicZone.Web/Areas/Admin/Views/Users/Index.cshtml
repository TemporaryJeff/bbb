@model PaginatedSearchViewModel<AdminUserListingServiceModel>

@{
	ViewData["Title"] = "User Administration";
}

<h2>@ViewData["Title"]</h2>

@{
	string previous = Model.Page.Current == 1 ? "disabled" : string.Empty;
	string next = Model.Page.Current == Model.Page.TotalPages ? "disabled" : string.Empty;

}

<nav aria-label="Page navigation">
	<ul class="pagination">
		<li class="page-item @previous">
			<a class="page-link" asp-action="Index" asp-route-searchTerm="@Model.SearchTerm" asp-route-page="@Model.Page.Previous" aria-label="Previous">
				<span aria-hidden="true">&laquo;</span>
				<span class="sr-only">Previous</span>
			</a>
		</li>

		@{
			int startPage = Model.Page.Current - 1 <= 0
				? 1
				: Model.Page.Current - 1;

			int endPage = Model.Page.Current + 1 >= Model.Page.TotalPages
				? Model.Page.TotalPages
				: Model.Page.Current + 1;

			if (startPage == 1)
			{
				endPage = Model.Page.TotalPages >= 3 ? 3 : Model.Page.TotalPages;
			}

			if (endPage == Model.Page.TotalPages && Model.Page.Current == endPage)
			{
				startPage = startPage == 1 ? 1 : startPage--;
			}
		}

		@for (int i = startPage; i <= endPage; i++)
		{
			string active = i == Model.Page.Current ? "active" : string.Empty;

			<li class="page-item class @active">
				<a class="page-link" asp-action="Index" asp-route-searchTerm="@Model.SearchTerm" asp-route-page="@i">@i</a>
			</li>
		}

		<li class="page-item  @next">
			<a class="page-link" asp-action="Index" asp-route-searchTerm="@Model.SearchTerm" asp-route-page="@Model.Page.Next" aria-label="Next">
				<span aria-hidden="true">&raquo;</span>
				<span class="sr-only">Next</span>
			</a>
		</li>
	</ul>
</nav>

<div class="row">
	<form asp-action="Index">
		<div class="col-md-7">
			<input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search users" />
		</div>

		<div class="col-md-1">
			<input type="submit" class="btn btn-success pull-right" value="Search" />
		</div>
	</form>
</div>

<table class="table table-striped table-responsive table-hover">
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th>Admin</th>
			<th>Uploader</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model.Page.Items)
		{
			<tr>
				<td>@user.Username</td>

				<td>@user.Email</td>

				<td>
					@{
						bool isAdmin = user.Roles.Any(r => r == AdministratorRole);
					}

					<form method="POST">
						@if (isAdmin)
						{
							<button type="submit"
									asp-action="RemoveFromRole"
									class="btn btn-primary">
								Yes
							</button>
							<input type="hidden" name="userId" value="@user.Id" />
							<input type="hidden" name="role" value="@AdministratorRole" />
						}
						else
						{
							<button type="submit"
									asp-action="AddToRole"
									class="btn btn-warning">
								No
							</button>
							<input type="hidden" name="userId" value="@user.Id" />
							<input type="hidden" name="role" value="@AdministratorRole" />
						}
					</form>
				</td>

				<td>
					@{
						bool isUploader = user.Roles.Any(r => r == UploaderRole);
					}

					<form method="POST">
						@if (isUploader)
						{
							<button type="submit"
									asp-action="RemoveFromRole"
									class="btn btn-primary">
								Yes
							</button>
							<input type="hidden" name="userId" value="@user.Id" />
							<input type="hidden" name="role" value="@UploaderRole" />
						}
						else
						{
							<button type="submit"
									asp-action="AddToRole"
									class="btn btn-warning">
								No
							</button>
							<input type="hidden" name="userId" value="@user.Id" />
							<input type="hidden" name="role" value="@UploaderRole" />
						}
					</form>
				</td>
			</tr>
			}
	</tbody>
</table>

